<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Theme.EduApp" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryDark">@color/purple_700</item>
    <item name="colorAccent">@color/teal_200</item>
</style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_bg</item> <!-- links drawable -->
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">#6200EE</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="EntryTitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <!-- Entry button style -->
    <style name="EntryButtonStyle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#6200EE</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
